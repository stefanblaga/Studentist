<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="com.mario22gmail.vasile.studentist.Account.CreateProfileActivity">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="269dp"
        android:layout_height="67dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="Informatii despre tine"
        android:textSize="23sp"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/user_create_name_TextInput"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:theme="@style/TextLabel"
        app:errorEnabled="true"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/user_create_name_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nume*"
            android:inputType="text"
            android:maxLength="50"
            android:paddingBottom="8dp"
            android:paddingTop="16dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/user_create_tel_TextInput"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:theme="@style/TextLabel"
        app:errorEnabled="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_create_name_TextInput">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/user_create_tel_nr_EditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Numar de telefon*"
            android:inputType="number"
            android:paddingBottom="8dp"
            android:paddingTop="16dp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/createProfileButton"
        android:layout_width="168dp"
        android:layout_height="55dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/amber"
        android:text="Gata"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/userTypeErrorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:text=""
        android:textColor="@color/alertColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupType" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Am probleme dentare"
        android:textSize="20dp"
        app:layout_constraintRight_toLeftOf="@+id/radioGroupType"
        app:layout_constraintTop_toTopOf="@+id/radioGroupType" />




    <RadioGroup
        android:id="@+id/radioGroupType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="40dp"
        android:layout_marginTop="11dp"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_create_tel_TextInput">

        <RadioButton
            android:id="@+id/radioPatient"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:buttonTint="@color/blueLight"
            android:checked="false"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/radioStudent"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:buttonTint="@color/blueLight"
            android:checked="false"
            android:textSize="14dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginRight="8dp"
        android:text="Sunt un studentist"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/radioGroupType"
        app:layout_constraintRight_toLeftOf="@+id/radioGroupType" />


</android.support.constraint.ConstraintLayout>
