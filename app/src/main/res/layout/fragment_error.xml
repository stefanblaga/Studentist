<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    tools:context="com.mario22gmail.vasile.studentist.ErrorFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="211dp"
        android:layout_height="110dp"
        app:srcCompat="@drawable/errorimage"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="-51dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Ne pare rau, a aparut o eroare"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintVertical_bias="0.485" />

    <Button
        android:id="@+id/closeErrorDialogButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/roundbuttoncategoryiconsstyle"
        android:minWidth="64dp"
        android:paddingLeft="@dimen/paddingButtons"
        android:paddingRight="@dimen/paddingButtons"
        android:paddingEnd="@dimen/paddingButtons"
        android:paddingStart="@dimen/paddingButtons"
        android:text="@string/close_dialog_text"
        android:textColor="@color/white"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</android.support.constraint.ConstraintLayout>
