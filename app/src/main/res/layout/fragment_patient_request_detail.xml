<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mario22gmail.vasile.studentist.Patient.PatientRequestDetailFragment">


    <TextView
        android:id="@+id/requestTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:gravity="center"
        android:text="request type"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/mainIconPatientRequestDetail"
        app:layout_constraintHorizontal_bias="0.501" />

    <TextView
        android:id="@+id/requestTelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="dsdsa"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/mainIconPatientRequestDetail"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/mainIconPatientRequestDetail"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/mainIconPatientRequestDetail" />

    <ImageView
        android:id="@+id/mainIconPatientRequestDetail"
        android:layout_width="@dimen/circleSizeRequestDetail"
        android:layout_height="@dimen/circleSizeRequestDetail"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:elevation="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/mainiconcircle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="9dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintHorizontal_bias="0.5" />

    <ImageButton
        android:id="@+id/callPatientImageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="48dp"
        android:elevation="5dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerInside"
        android:background="@drawable/roundbuttonstyle"
        android:src="@drawable/ic_call_white"
        app:layout_constraintRight_toLeftOf="@+id/mainIconPatientRequestDetail"
        app:layout_constraintTop_toTopOf="@+id/sendMessagePatientImageButton" />

    <ImageButton
        android:id="@+id/sendMessagePatientImageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="48dp"
        android:elevation="5dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/roundbuttonmessagestyle"
        android:src="@drawable/ic_mail_outline"
        app:layout_constraintLeft_toRightOf="@+id/mainIconPatientRequestDetail"
        app:layout_constraintTop_toTopOf="@+id/mainIconPatientRequestDetail" />

    <TextView
        android:id="@+id/patientNameRequestDetailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nume"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/requestTypeTextView" />

    <TextView
        android:id="@+id/requestDescriptionLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descriere:"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/requestDescriptionTextView"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/requestDescriptionTextView" />

    <TextView
        android:id="@+id/requestDescriptionTextView"
        android:layout_width="315dp"
        android:layout_height="90dp"
        android:background="@drawable/rectanglestyle"
        android:text=""
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/patientDetailsDescriptionTopDistance"
        app:layout_constraintTop_toBottomOf="@+id/requestTelTextView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/dateRequestTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/requestDescriptionTextView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/requestDescriptionTextView" />

    <Button
        android:id="@+id/backToListButton"
        android:layout_width="wrap_content"
        android:paddingLeft="36dp"
        android:paddingStart="36dp"
        android:paddingEnd="36dp"
        android:paddingRight="36dp"
        android:layout_height="48dp"
        android:text="Inapoi la lista"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@color/colorPrimary"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="0.502" />

</android.support.constraint.ConstraintLayout>

