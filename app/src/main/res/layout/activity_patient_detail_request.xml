<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PatientDetailRequest">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mainIconPatientRequestDetail"
        android:layout_width="131dp"
        android:layout_height="101dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2"
        app:srcCompat="@drawable/acontrol"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/labelDescriere"
        android:layout_width="109dp"
        android:layout_height="33dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Descriere"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainIconPatientRequestDetail"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/requestDescriptionTextView"
        android:layout_width="107dp"
        android:layout_height="33dp"
        android:text="TextView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/mainIconPatientRequestDetail"
        app:layout_constraintLeft_toRightOf="@+id/labelDescriere"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/labelTelNr"
        android:layout_width="105dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:text="Telefon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelDescriere"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/TelNrTextView"
        android:layout_width="108dp"
        android:layout_height="29dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/labelTelNr"
        app:layout_constraintTop_toBottomOf="@+id/requestDescriptionTextView"
        android:layout_marginStart="11dp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/studentPartPatientRequestDetailConstraintLayout"
        android:layout_width="341dp"
        android:layout_height="281dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="8dp"
        tools:layout_editor_absoluteY="278dp">

        <Button
            android:id="@+id/acceptButtonPatientRequestDetailsActivity"
            android:layout_width="155dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorPrimary"
            android:minWidth="128dp"
            android:text="@string/patientDetailRequest_AcceptButton"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/rejectButtonPatientRequestDetailsActivity"
            android:layout_width="155dp"
            android:layout_height="48dp"
            android:background="@color/alertColor"
            android:minWidth="128dp"
            android:text="Nu am rezolvat"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="164dp"
            android:layout_height="33dp"
            android:text="@string/studentFound_RequestDetail"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/StudentNameRequestDetailTextView"
            android:layout_width="92dp"
            android:layout_height="38dp"
            android:text="student name"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textViewStudentTel"
            android:layout_width="317dp"
            android:layout_height="69dp"
            android:text="TextView"
            android:visibility="visible"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/acceptButtonPatientRequestDetailsActivity"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>
