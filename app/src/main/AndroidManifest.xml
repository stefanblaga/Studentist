<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mario22gmail.vasile.studentist"
    android:versionCode="5"
    android:versionName="1.3.0">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".account.LoginActivity" />
        <activity
            android:name=".patient.PatientChooseOptionsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StartActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".patient.PatientAddRequest"
            android:screenOrientation="portrait" />
        <activity
            android:name=".account.CreateProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".patient.PatientRequestDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name=".howToPage.HowToUsePatientActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity android:name=".student.studentRequests.StudentRequestDetailsActivity" />
        <activity
            android:name=".howToPage.HowToUseStudent"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity
            android:name=".MemoriumActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity
            android:name=".MainNavigationActivity"
            android:label="@string/title_activity_main_navigation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name=".account.ChangeAccountInfoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".account.CreateAccountActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".patient.PatientCelebrationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".howToPage.HowToUseIntro"></activity>
    </application>

</manifest>