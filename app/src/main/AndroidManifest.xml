<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mario22gmail.vasile.studentist">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".account.LoginActivity" />
        <activity android:name=".patient.PatientChooseOptionsActivity" />
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".patient.PatientAddRequest" />
        <activity android:name=".patient.PatientShowRequestListActivity" />
        <activity
            android:name=".account.CreateProfileActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".patient.PatientRequestDetails" />
        <activity
            android:name=".howToPage.HowToUsePatientActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity android:name=".student.studentRequests.StudentRequestDetailsActivity" />
        <activity
            android:name=".howToPage.HowToUseStudent"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity android:name=".student.StudentRequestListActivity" />
        <activity
            android:name=".MemoriumActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar"></activity>
    </application>

</manifest> <!-- android:screenOrientation="portrait" -->
